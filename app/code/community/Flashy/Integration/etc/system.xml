<?xml version="1.0"?>

<config>
	<sections>
		<flashy>
			<label>Flashy Integration</label>
			<tab>general</tab>
			<class>flashy</class>
			<frontend_type>text</frontend_type>
			<sort_order>1100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			
			<groups>
				<flashy translate="label" module="flashy">
					<label>Flashy Integration</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<purchase translate="label">
							<label>Send purchase before payment</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</purchase>
						<log translate="label">
							<label>Enabled logging</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</log>
						<flashy_key translate="label">
							<label>API Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enter the API Key provided by Flashy.</comment>
							<backend_model>flashy/system_config_backend_key</backend_model>
						</flashy_key>
						<flashy_connected translate="label">
							<label>Connected with Flashy</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>flashy/adminhtml_system_config_connected</frontend_model>
						</flashy_connected>
					</fields>
				</flashy>
				<flashy_lists translate="label" module="flashy">
					<label>Flashy Lists</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<flashy_list translate="label">
							<label>Flashy list</label>
							<frontend_type>select</frontend_type>
							<source_model>flashy/list</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Assign list to store from Flashy.</comment>
						</flashy_list>
					</fields>
				</flashy_lists>
				<flashy_catalog translate="label" module="flashy">
					<label>Flashy Catalog Url</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<flashy_catalog_url translate="label">
							<label>Flashy Catalog url</label>
							<frontend_model>flashy/adminhtml_system_config_url</frontend_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Catalog url used from Flashy.</comment>
						</flashy_catalog_url>
					</fields>
				</flashy_catalog>
			</groups>
		</flashy>
	</sections>
</config>